<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eedd00"
    tools:context=".infragments.InnerCFragment">

    <RelativeLayout
        android:background="@drawable/background_radar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/stigmaLeft1"
            android:layout_marginTop="78dp"
            android:layout_marginLeft="120dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/stigma"
            android:visibility="visible"
            />

        <ImageView
            android:id="@+id/stigmaLeft2"
            android:layout_marginTop="116dp"
            android:layout_marginLeft="115dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/stigma"
            android:visibility="visible"
            />

        <ImageView
            android:id="@+id/stigmaLeft3"
            android:layout_marginTop="166dp"
            android:layout_marginLeft="145dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/stigma"
            android:visibility="visible"
            />

        <ImageView
            android:id="@+id/stigmaRight1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="74dp"
            android:layout_marginRight="110dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/stigma"
            android:visibility="visible"
            />

        <ImageView
            android:id="@+id/stigmaRight2"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="114dp"
            android:layout_marginRight="120dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/stigma"
            android:visibility="visible"
            />

        <ImageView
            android:id="@+id/stigmaRight3"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="160dp"
            android:layout_marginRight="138dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/stigma"
            android:visibility="visible"
            />

        <ImageView
            android:id="@+id/stigmaMid1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="83dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/stigma"
            android:visibility="visible"
            />

        <ImageView
            android:id="@+id/stigmaMid2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/stigma"
            android:visibility="visible"
            />

        <ImageView
            android:id="@+id/stigmaMid3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="160dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/stigma"
            android:visibility="visible"
            />

        <ImageView
            android:id="@+id/stigmaEnd"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/stigma"
            android:visibility="invisible"
            />


        <ImageButton
            android:id="@+id/cannon_button"
            android:layout_width="100dp"
            android:alpha="0"
            android:layout_marginBottom="150dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_height="100dp"
            />

        <LinearLayout
            android:id="@+id/radarHolder"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="horizontal"
            >


        </LinearLayout>

    </RelativeLayout>
</FrameLayout>